*filter
:IN ACCEPT [0:0]
:OUT ACCEPT [0:0]
:FORWARD ACCEPT [0:0]
<% suppress_arp.each do |val| -%> 
[0:0] -A IN -d <%= val %> -j DROP 
[0:0] -A OUT -s <%= val %> -j mangle --mangle-ip-s <%= ipaddress %>
<% end -%>
COMMIT
